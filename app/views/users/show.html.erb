<%- model_class = User -%>
<div class="page-header">
  <h1>ユーザ情報</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>メールアドレス:</strong></dt>
  <dd><%= @users.email %></dd>
  <dt><strong>ユーザ名:</strong></dt>
  <dd><%= @users.username %></dd>
  <dt><strong>権限レベル:</strong></dt>
  <dd><%= @users.userType %></dd>
</dl>

<%= link_to "戻る", users_path, :class => 'btn btn-default'  %>
<%= link_to "編集", edit_user_path(@users), :class => 'btn btn-default' %>
<%= link_to "削除", user_path(@users), :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '本当に削除しますか？')) },
              :class => 'btn btn-danger' %>
