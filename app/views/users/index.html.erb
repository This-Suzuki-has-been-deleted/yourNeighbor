<%- model_class = User -%>
<div class="page-header">
  <h1>管理者用ページ</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>メールアドレス</th>
      <th>ユーザ名</th>
      <th>権限レベル</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.id, user_path(user.email) %></td>
        <td><%= user.email %></td>
        <td><%= user.username %></td>
        <td><%= user.user_type %></td>
        <td>
          <%= link_to "詳細", user_path(user), :class => 'btn btn-default btn-xs' %>
          <%= link_to "編集", edit_user_path(user.email), :class => 'btn btn-default btn-xs' %>
          <%= link_to "削除", user_path(user), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '本当に削除しますか？')) }, :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
