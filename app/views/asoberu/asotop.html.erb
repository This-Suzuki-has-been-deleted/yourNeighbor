		<div id="inMap">ここにマップを表示</div>
		<script>
			var map;
			var marker;
			var infoWindow;
			var center = {
				lat: 43.0560242, // 緯度
				lng: 141.3795115, // 経度
			};
			function initMap() {
				map = new google.maps.Map(document.getElementById('inMap'), { // #inMapに地図を埋め込む
					center: center, // 地図の中心を指定
					zoom: 18 // 地図のズームを指定
				});

				marker = new google.maps.Marker({ // マーカーの追加
					position: center, // マーカーを立てる位置を指定
					map: map // マーカーを立てる地図を指定
				});

				infoWindow = new google.maps.InfoWindow({ // 吹き出しの追加
					content: '<div class="fukidashi">北海道情報専門学校<br>'+
					'<a href="reviewPost.html.erb">レビューを書き込む</a>'+
					' <a href="reviewDetail.html.erb">レビューを見る</a></div>' // 吹き出しに表示する内容
				});
				marker.addListener('click', function () { // マーカーをクリックしたとき
					infoWindow.open(map, marker); // 吹き出しの表示
				});
			}
		</script>
