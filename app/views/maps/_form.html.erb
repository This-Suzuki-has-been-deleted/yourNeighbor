<%= form_with(model: map, local: true) do |form| %>
  <% if map.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(map.errors.count, "error") %> prohibited this map from being saved:</h2>

      <ul>
      <% map.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label '地点名' %>
    <%= form.text_field :map_name, id: :map_name %>
  </div>
  <div class="field">
    <%= form.label '概要' %>
    <%= form.text_area :map_text, id: :map_text %>
  </div>

  <div class="field">
    <%= form.label '緯度' %>
    <%= form.text_field :map_lat, id: 'latitude' %>
  </div>

  <div class="field">
    <%= form.label '経度' %>
    <%= form.text_field :map_lng, id: 'longitude' %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

  <style type="text/css">
    #map {
      height: 400px;
      margin-left: auto;
      margin-right: auto;
      text-align: left;
    }
  </style>
  <div id="map"></div>


<% end %>
