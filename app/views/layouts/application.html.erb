<html>
  <head>
    <title>mama Friends～Your Neighbor</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="//maps.google.com/maps/api/js?key=AIzaSyBJfuH3GcpFYapsQGKpWvoiZJ2oqF8ud44"></script>
    <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
    <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script>
    <!-- only if you need custom infoboxes -->
    </head>
  <body>

    <header>
      <% if user_signed_in? %>
        <h1><%= link_to 'mama Friends～Your Neighbor', '/maps' %><!-- asoberutopに変更する --></h1>
      <% else %>
        <h1><%= link_to 'mama Friends～Your Neighbor', new_user_session_path %></h1>
      <% end %>
      <nav>
        <% if user_signed_in? %>
          <%= link_to 'プロフィール変更', edit_user_registration_path %>
          <%= link_to 'ログアウト', destroy_user_session_path, method: :delete %><br>
          <%= p current_user.email %><br/>
        <% else %>
          <%= link_to 'サインアップ', new_user_registration_path %>
          <%= link_to 'ログイン', new_user_session_path %>
        <% end %>
      </nav>
    </header>

    <small><%= link_to 'テスト コラム一覧', '/columns' %></small>
    <small><%= link_to 'テスト コラム作成', '/columns/new' %></small>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
