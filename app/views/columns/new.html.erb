<h2>新規作成</h2>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@column) do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :email %>
      <%= f.text_area :email, maxlength >= 1000 %>

      <%= f.submit "コラムを投稿する", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
