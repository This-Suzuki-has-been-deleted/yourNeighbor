<h2>コラム作成</h2>

<%= stylesheet_link_tag "column.scss", :media => "all" %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@column) do |f| %>
      <br />
      <%= f.label :title %>
      <%= f.text_field :title %>
      <br />
      <%= f.label :text %>
      <%= f.text_area :text, :maxlength => "1000", :size => "100x15" %>

      <%= f.submit "コラムを投稿する", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
