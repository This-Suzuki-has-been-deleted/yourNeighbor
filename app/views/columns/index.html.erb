<%- model_class = Column -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:text) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @column.each do |column| %>
      <tr>
        <td><%= column.title %></td>
        <td><%= column.text[0,20] %></td>
        <td>
          <%= link_to t('詳細', :default => t("helpers.links.show")),
                      column_path(column), :class => 'btn btn-default btn-xs' %>
          <% if @column.email === current_user.email %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              column_path(column),
              :method => :delete,
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '本当に削除しますか？')) },
              :class => 'btn btn-xs btn-danger' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_column_path,
            :class => 'btn btn-primary' %>
