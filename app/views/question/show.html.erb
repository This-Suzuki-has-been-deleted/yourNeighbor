<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @question.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @question.content %>
</p>

<% @questions.each_with_index do |question , idx| %>
  <p>
    <%= idx + 1 %>. <%= question.name %> : <%= question.body %>
    <%= link_to '[削除]', question_delete_path(question.id), method: :delete, data: {confirm: "削除してもよろしいですか？"} %>
  </p>
<% end %>

<h3>新規書き込み</h3>
<%= form_for @newQuestion, :url => question_create_path do |f| %>
  <p>お名前</p>
  <p><%= f.text_field :name %></p>
  <p>本文</p>
  <p><%= f.text_area :body %></p>
  <%= f.hidden_field :question_id %>
  <%= f.submit %>
<% end %>


<%= link_to 'Edit', edit_question_path(@question) %>
