<%- model_class = Report -%>
<div class="page-header">
  <h1>通報一覧</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>通報された分野</th>
      <th>分野でのID</th>
      <th>通報者のE-mail</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @reports.each do |report| %>
    path = "/" + report.report_type + "/" + report.report_id
      <tr>
        <td><%= link_to report.id, path %></td>
        <td><%= report.report_type %></td>
        <td><%= report.report_id %></td>
        <td><%= report.report_email %></td>
        <td>
          <%= link_to "詳細", report_path(report), :class => 'btn btn-default btn-xs' %>

          <%= link_to "削除",
                      report_path(report),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '本当に削除しますか？')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
