<html>
<head>

  <title>mama Friends～Your Neighbor</title>
</head>
<body style ="background-color:lime;">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
<%= devise_error_messages! %>
<div id="top">
  <div id="header">
    <div id="main">
      <h1>
        <p>emailを入力してください</p>
      </h1>
      <form class="auth-form form desconnect" action="Registrpassword.html">
        <div style="text-align:center;">
          <div class="back-code">
            <div class="control-group">
              <div class="field">
                <%= f.label :email %><br/>
                <%= f.email_field :email, autofocus: true %>
              </div>
              <div class="actions">
                <%= f.submit "リセットのためのパスワードを発行します。" %>
              </div>
            <% end %>

            <%= render "devise/shared/links" %>

          </div>
        </div>
        <!-- back-code -->
      </div>
      <!-- /contents -->
    </form>
  </div>
  <!-- /main -->
</div>
<!-- /header -->
<div id="footer">
  <div class="copyright">Copyright &copy; 2017 mama Friends～Your Neighbor All Rights Reserved.
  </div>
</div>
<!-- /footer -->
</div>
<!-- /top -->
</body>
</html>
