<%- model_class = Question -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @question.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:text) %>:</strong></dt>
  <dd><%= @question.text %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tag1) %>:</strong></dt>
  <dd><%= @question.tag1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tag2) %>:</strong></dt>
  <dd><%= @question.tag2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tag3) %>:</strong></dt>
  <dd><%= @question.tag3 %></dd>
</dl>

<h3>新規書き込み</h3>
<%= form_for @newAnswer, :url => answer_create_path do |f| %>
  <p>お名前</p>
  <p><%= f.text_field :email %></p>
  <p>回答</p>
  <p><%= f.text_area :text %></p>
  <%= f.hidden_field :answer_id %>
  <%= f.submit %>
<% end %>



<%= link_to t('.back', :default => t("helpers.links.back")),
              questions_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_question_path(@question), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              question_delete_path(@question),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
