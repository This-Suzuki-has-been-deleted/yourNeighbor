<%- model_class = Question -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @question.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:text) %>:</strong></dt>
  <dd><%= @question.text %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tag1) %>:</strong></dt>
  <dd><%= @question.tag1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tag2) %>:</strong></dt>
  <dd><%= @question.tag2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tag3) %>:</strong></dt>
  <dd><%= @question.tag3 %></dd>
</dl>
<br>

<%- model_class = Answer -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>
<dl class="dl-horizontal">　
    <% @Answers.each do |answer| %>
        <dt><strong><%= model_class.human_attribute_name(:username) %>:</strong></dt>
        <dd><%= answer.username %></dd>
        <dt><strong><%= model_class.human_attribute_name(:text) %>:</strong></dt>
        <dd><%= answer.text %></dd>
        <% if answer.email === current_user.email %>
        <dt><strong><%=t '.actions', :default => t("helpers.actions") %>:</strong></dt>
        <dd><%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_answer_path(answer), :class => 'btn btn-default btn-xs' %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      answer_path(answer),
                      :method => 'delete',
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %></dd>

    <% end %>
    <br><br>
<% end %>
</dl>
<% if @question.email != current_user.email %>
  <h3>新規書き込み</h3>
  <%= form_for @newAnswer, :url => answer_create_path do |f| %>
    <p>回答</p>
    <p><%= f.text_area :text %></p>
    <%= f.hidden_field  :question_id , :value => params[:id]%>
    <%= f.submit %>
  <% end %>
<% end %>

<%= link_to "この質問を通報する", new_report_path(:id =>@question.id,:report_type =>'question'), :class=>'btn btn-danger' %>

<%= link_to t('.back', :default => t("helpers.links.back")),
              questions_path, :class => 'btn btn-default'  %>
